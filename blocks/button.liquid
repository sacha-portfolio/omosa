<a
  href="{{ block.settings.link }}"
  {% if block.settings.open_on_new_tab %}
    target="_blank"
  {% endif %}
  {{ block.shopify_attributes }}
  class="
    inline-block
    text-{{ block.settings.text_alignment }}

    {% if block.settings.type_preset == 'custom' %}
      {{ block.settings.font_size }}
      {{ block.settings.font_style }}
      {{ block.settings.font_weight }}
      font-(family-name:{{ block.settings.font_family }})
    {% elsif block.settings.type_preset == 'paragraph' %}
      font-(family-name:{{ settings.type_font_paragraph }})
      {{ settings.type_size_paragraph }}
      {{ settings.type_mobile_size_paragraph }}
      {{ settings.type_font_weight_paragraph }}
      {{ settings.type_case_paragraph }}
    {% elsif block.settings.type_preset == 'button' %}
      font-(family-name:{{ settings.type_font_button }})
      {{ settings.type_size_button }}
      {{ settings.type_mobile_size_button }}
      {{ settings.type_font_weight_button }}
      {{ settings.type_case_button }}
    {% elsif block.settings.type_preset == 'h1' %}
      font-(family-name:{{ settings.type_font_h1 }})
      {{ settings.type_size_h1 }}
      {{ settings.type_mobile_size_h1 }}
      {{ settings.type_font_weight_h1 }}
      {{ settings.type_case_h1 }}
    {% elsif block.settings.type_preset == 'h2' %}
      font-(family-name:{{ settings.type_font_h2 }})
      {{ settings.type_size_h2 }}
      {{ settings.type_mobile_size_h2 }}
      {{ settings.type_font_weight_h2 }}
      {{ settings.type_case_h2 }}
    {% elsif block.settings.type_preset == 'h3' %}
      font-(family-name:{{ settings.type_font_h3 }})
      {{ settings.type_size_h3 }}
      {{ settings.type_mobile_size_h3 }}
      {{ settings.type_font_weight_h3 }}
      {{ settings.type_case_h3 }}
    {% elsif block.settings.type_preset == 'h4' %}
      font-(family-name:{{ settings.type_font_h4 }})
      {{ settings.type_size_h4 }}
      {{ settings.type_mobile_size_h4 }}
      {{ settings.type_font_weight_h4 }}
      {{ settings.type_case_h4 }}
    {% endif %}

    {% if block.settings.button_preset == 'custom' %}
      text-[{{ block.settings.color }}]
      bg-[{{ block.settings.color_background }}]
      border-{{ block.settings.border_style }}
      border-[{{ block.settings.border_width }}px]
      border-[{{ block.settings.border_color }}]
      rounded-[{{ block.settings.border_radius }}px]
      pt-[{{ block.settings.padding_top }}px]
      pb-[{{ block.settings.padding_bottom }}px]
      pl-[{{ block.settings.padding_left }}px]
      pr-[{{ block.settings.padding_right }}px]
      {%- if block.settings.add_hover_effect %}
        transition-colors
        duration-{{ block.settings.transition_duration | times: 1000 | round }}
        hover:text-[{{ block.settings.hover_color }}]
        hover:bg-[{{ block.settings.hover_color_background }}]
        hover:border-{{ block.settings.hover_border_style }}
        hover:border-[{{ block.settings.hover_border_width }}px]
        hover:border-[{{ block.settings.hover_border_color }}]
        hover:rounded-[{{ block.settings.hover_border_radius }}px]
      {%- endif %}
    {% elsif block.settings.button_preset == 'primary' %}
      text-[{{ settings.button_color_primary }}]
      bg-[{{ settings.button_color_background_primary }}]
      border-{{ settings.button_border_style_primary }}
      border-[{{ settings.button_border_width_primary }}px]
      border-[{{ settings.button_border_color_primary }}]
      rounded-[{{ settings.button_border_radius_primary }}px]
      pt-[{{ settings.button_padding_top_primary }}px]
      pb-[{{ settings.button_padding_bottom_primary }}px]
      pl-[{{ settings.button_padding_left_primary }}px]
      pr-[{{ settings.button_padding_right_primary }}px]
      {%- if settings.button_add_hover_effect_primary %}
        transition-colors
        duration-{{ settings.button_transition_duration_primary | times: 1000 | round }}
        hover:text-[{{ settings.button_hover_color_primary }}]
        hover:bg-[{{ settings.button_hover_color_background_primary }}]
        hover:border-{{ settings.button_hover_border_style_primary }}
        hover:border-[{{ settings.button_hover_border_width_primary }}px]
        hover:border-[{{ settings.button_hover_border_color_primary }}]
        hover:rounded-[{{ settings.button_hover_border_radius_primary }}px]
      {%- endif %}
    {% elsif block.settings.button_preset == 'secondary' %}
      text-[{{ settings.button_color_secondary }}]
      bg-[{{ settings.button_color_background_secondary }}]
      border-{{ settings.button_border_style_secondary }}
      border-[{{ settings.button_border_width_secondary }}px]
      border-[{{ settings.button_border_color_secondary }}]
      rounded-[{{ settings.button_border_radius_secondary }}px]
      pt-[{{ settings.button_padding_top_secondary }}px]
      pb-[{{ settings.button_padding_bottom_secondary }}px]
      pl-[{{ settings.button_padding_left_secondary }}px]
      pr-[{{ settings.button_padding_right_secondary }}px]
      {%- if settings.button_add_hover_effect_secondary %}
        transition-colors
        duration-{{ settings.button_transition_duration_secondary | times: 1000 | round }}
        hover:text-[{{ settings.button_hover_color_secondary }}]
        hover:bg-[{{ settings.button_hover_color_background_secondary }}]
        hover:border-{{ settings.button_hover_border_style_secondary }}
        hover:border-[{{ settings.button_hover_border_width_secondary }}px]
        hover:border-[{{ settings.button_hover_border_color_secondary }}]
        hover:rounded-[{{ settings.button_hover_border_radius_secondary }}px]
      {%- endif %}
    {% elsif block.settings.button_preset == 'link' %}
      text-[{{ settings.button_color_link }}]
      bg-[{{ settings.button_color_background_link }}]
      border-{{ settings.button_border_style_link }}
      border-[{{ settings.button_border_width_link }}px]
      border-[{{ settings.button_border_color_link }}]
      rounded-[{{ settings.button_border_radius_link }}px]
      pt-[{{ settings.button_padding_top_link }}px]
      pb-[{{ settings.button_padding_bottom_link }}px]
      pl-[{{ settings.button_padding_left_link }}px]
      pr-[{{ settings.button_padding_right_link }}px]
      {%- if settings.button_add_hover_effect_link %}
        transition-colors
        duration-{{ settings.button_transition_duration_link | times: 1000 | round }}
        hover:text-[{{ settings.button_hover_color_link }}]
        hover:bg-[{{ settings.button_hover_color_background_link }}]
        hover:border-{{ settings.button_hover_border_style_link }}
        hover:border-[{{ settings.button_hover_border_width_link }}px]
        hover:border-[{{ settings.button_hover_border_color_link }}]
        hover:rounded-[{{ settings.button_hover_border_radius_link }}px]
      {%- endif %}
    {% endif %}

    {{ block.settings.text_transform }}
    {{ block.settings.text_decoration }}
    {% if block.settings.flex_basis_style %}
      basis-[{{ block.settings.flex_basis }}%]
    {% endif %}
  "
>
  {{ block.settings.text }}
</a>

{% schema %}
{
  "name": "Button",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Content",
      "default": "Discover"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "checkbox",
      "id": "open_on_new_tab",
      "label": "Open on new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "text_alignment",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "left"
    },
    {
      "type": "select",
      "id": "text_decoration",
      "label": "Text decoration",
      "options": [
        { "value": "no-underline", "label": "No underline" },
        { "value": "underline", "label": "Underline" },
        { "value": "overline", "label": "Overline" },
        { "value": "line-through", "label": "Line-through" }
      ],
      "default": "no-underline"
    },
    {
      "type": "select",
      "id": "text_transform",
      "label": "t:settings_schema.typography.text_case",
      "options": [
        {
          "value": "none",
          "label": "t:settings_schema.typography.default"
        },
        {
          "value": "uppercase",
          "label": "t:settings_schema.typography.uppercase"
        }
      ],
      "default": "none",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "select",
      "id": "type_preset",
      "label": "Preset",
      "options": [
        {
          "value": "paragraph",
          "label": "Paragraph"
        },
        {
          "value": "button",
          "label": "Button"
        },
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ],
      "default": "button"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "Font size",
      "options": [
        { "value": "text-5xl", "label": "5xl (48px)" },
        { "value": "text-4xl", "label": "4xl (36px)" },
        { "value": "text-3xl", "label": "3xl (30px)" },
        { "value": "text-2xl", "label": "2xl (24px)" },
        { "value": "text-xl", "label": "xl (20px)" },
        { "value": "text-lg", "label": "lg (18px)" },
        { "value": "text-base", "label": "base (16px)" },
        { "value": "text-sm", "label": "sm (14px)" },
        { "value": "text-xs", "label": "xs (12px)" }
      ],
      "default": "text-base",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "select",
      "id": "font_family",
      "label": "t:settings_schema.typography.font",
      "options": [
        {
          "value": "--font-font-1--family",
          "label": "t:settings_schema.typography.font-1"
        },
        {
          "value": "--font-font-2--family",
          "label": "t:settings_schema.typography.font-2"
        },
        {
          "value": "--font-font-3--family",
          "label": "t:settings_schema.typography.font-3"
        },
        {
          "value": "--font-font-4--family",
          "label": "t:settings_schema.typography.font-4"
        }
      ],
      "default": "--font-font-1--family",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        { "value": "font-thin", "label": "Thin" },
        { "value": "font-extralight", "label": "Extra Light" },
        { "value": "font-light", "label": "Light" },
        { "value": "font-normal", "label": "Normal" },
        { "value": "font-medium", "label": "Medium" },
        { "value": "font-semibold", "label": "Semi Bold" },
        { "value": "font-bold", "label": "Bold" },
        { "value": "font-extrabold", "label": "Extra Bold" },
        { "value": "font-black", "label": "Black" }
      ],
      "default": "font-normal",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "select",
      "id": "font_style",
      "label": "Font style",
      "options": [
        { "value": "not-italic", "label": "Normal" },
        { "value": "italic", "label": "Italic" }
      ],
      "default": "not-italic",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "header",
      "content": "Variant"
    },
    {
      "type": "select",
      "id": "button_preset",
      "label": "Preset",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "link",
          "label": "Link"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ],
      "default": "primary"
    },
    {
      "type": "header",
      "content": "Colors",
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Text",
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "color",
      "id": "color_background",
      "label": "Background",
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "header",
      "content": "Border",
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "select",
      "id": "border_style",
      "label": "Style",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "solid", "label": "Solid" },
        { "value": "dashed", "label": "Dashed" },
        { "value": "dotted", "label": "Dotted" },
        { "value": "double", "label": "Double" }
      ],
      "default": "none",
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 1,
      "max": 50,
      "step": 1,
