      "step": 1,
      "unit": "px",
      "label": "Radius",
      "default": 0,
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "header",
      "content": "Padding",
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top",
      "default": 10,
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom",
      "default": 10,
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Left",
      "default": 10,
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Right",
      "default": 10,
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
      "type": "header",
      "content": "Hover",
      "visible_if": "{{ block.settings.button_preset == 'custom' }}"
    },
    {
