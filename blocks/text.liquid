<{{ block.settings.tag }}
  {% if block.settings.tag == 'a' %}
    href="{{ block.settings.link }}"
    {% if block.settings.open_on_new_tab %}
      target="_blank"
    {% endif %}
  {% endif %}
  class="block bg-[{{ block.settings.color_background }}] text-[{{ block.settings.color }}] text-{{ block.settings.font_size }} font-{{ block.settings.font_weight }} text-{{ block.settings.text_alignment }} {{ block.settings.font_family }}"
>
  {{ block.settings.text }}
</{{ block.settings.tag }}>

{% schema %}
{
  "name": "Text",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Content",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "Font Size",
      "options": [
        { "value": "5xl", "label": "5xl" },
        { "value": "4xl", "label": "4xl" },
        { "value": "3xl", "label": "3xl" },
        { "value": "2xl", "label": "2xl" },
        { "value": "xl", "label": "xl" },
        { "value": "lg", "label": "lg" },
        { "value": "base", "label": "base" },
        { "value": "sm", "label": "sm" },
        { "value": "xs", "label": "xs" }
      ],
      "default": "base"
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font Weight",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "normal", "label": "Normal" },
        { "value": "medium", "label": "Medium" },
        { "value": "semi-bold", "label": "Semi-bold" },
        { "value": "bold", "label": "Bold" }
      ],
      "default": "normal"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "font_family",
      "label": "Font Family",
      "options": [
        { "value": "heading_primary", "label": "Heading Primary" },
        { "value": "heading_secondary", "label": "Heading Secondary" },
        { "value": "body_primary", "label": "Body Primary" },
        { "value": "body_secondary", "label": "Body Secondary" }
      ],
      "default": "body_primary"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Color"
    },
    {
      "type": "color",
      "id": "color_background",
      "label": "Background Color"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "checkbox",
      "id": "open_on_new_tab",
      "label": "Open on new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "SEO"
    },
    {
      "type": "select",
      "id": "tag",
      "label": "Tag Selector",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "div", "label": "DIV" },
        { "value": "a", "label": "A" }
      ],
      "default": "div"
    }
  ],
  "presets": [
    {
      "name": "Text"
    }
  ]
}
{% endschema %}
