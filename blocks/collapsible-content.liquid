{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}

<div class="accordion" {{ block.shopify_attributes }}>
  <details id="Details-{{ block.id }}-{{ section.id }}">
    <summary id="Summary-{{ block.id }}-{{ section.id }}" class="items-center">
      {%- assign file = block.settings.icon | replace: '_', '-' | prepend: 'icon-' | append: '.svg' -%}
      <span class="svg-wrapper h-[{{ block.settings.icon_size }}px]! w-[{{ block.settings.icon_size }}px]!">
        {{- file | inline_asset_content -}}
      </span>
      <h3 class="accordion__title inline-richtext h4">
        {{ block.settings.heading | default: block.settings.page.title | escape }}
      </h3>
      {{- 'icon-caret.svg' | inline_asset_content -}}
    </summary>
    <div
      class="accordion__content rte"
      id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
      role="region"
      aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
    >
      {{ block.settings.row_content }}
      {{ block.settings.page.content }}
    </div>
  </details>
</div>

