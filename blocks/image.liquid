<{{ block.settings.tag }}
  {% if block.settings.tag == 'a' %}
    href="{{ block.settings.link }}"
    {% if block.settings.open_on_new_tab %}
      target="_blank"
    {% endif %}
  {% endif %}
  class="
    flex
    {{ block.settings.spacing | class_list }}
  "
>
  {% if block.settings.image_url %}
    {% capture image_classes %}h-auto max-w-full max-h-[{{ block.settings.height }}px] object-cover aspect-[{{ block.settings.aspect_ratio_width | default: 'auto' }}/{{ block.settings.aspect_ratio_height | default: 'auto' }}]{% endcapture %}
    {{ block.settings.image_url | image_url: width: 1500 | image_tag: class: image_classes | strip }}
  {% else %}
    {% capture placeholder_classes %}h-full w-full max-w-full max-h-[{{ block.settings.height }}px] object-cover aspect-[{{ block.settings.aspect_ratio_width | default: 'auto' }}/{{ block.settings.aspect_ratio_height | default: 'auto' }}] placeholder-svg{% endcapture %}
    {{ 'hero-apparel-1' | placeholder_svg_tag: placeholder_classes | strip }}
  {% endif %}
</{{ block.settings.tag }}>

{% schema %}
{
  "name": "Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_url",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Height",
      "options": [
        { "value": "600", "label": "Extra Large" },
        { "value": "450", "label": "Large" },
        { "value": "300", "label": "Medium" },
        { "value": "150", "label": "Small" }
      ]
    },
    {
      "type": "header",
      "content": "Aspect Ratio"
    },
    {
      "type": "number",
      "id": "aspect_ratio_width",
      "label": "Width"
    },
    {
      "type": "number",
      "id": "aspect_ratio_height",
      "label": "Height"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "checkbox",
      "id": "open_on_new_tab",
      "label": "Open on new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "Container SEO"
    },
    {
      "type": "select",
      "id": "tag",
      "label": "Tag Selector",
      "options": [
        { "value": "div", "label": "DIV" },
        { "value": "a", "label": "A" }
      ],
      "default": "div"
    }
  ],
  "presets": [
    {
      "name": "Image"
    }
  ]
}
{% endschema %}
